<!DOCTYPE html>
<html>
<head>
  <title>BaconSplitter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% flash.each do |key, value| %>
    <div class='flash' id='<%= key %>'>
      <div id='flash_value'>
        <%= value %>
      </div>
    </div>
  <% end %>
<%= yield %>

</body>
</html>
